deploy/... <- static,private
  rsync -pr static/ deploy/
  rsync -pr private/ deploy/

deploy/index.html <- ./templates/index.html.mako
  umask 133
  template-render -d ./templates:./widgets -t index.html.mako -m ./private.yaml -o ./deploy/index.html

deploy/css/... <- 
  mkdir -m 755 -p deploy/css

deploy/css/default.css <- style/default.less
  lessc style/default.less > deploy/css/default.css

deploy/css/main.css <- style/main.less
  lessc style/main.less > deploy/css/main.css
